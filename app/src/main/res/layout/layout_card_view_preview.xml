<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="0dp"
        android:src="@drawable/title_bg"
        android:scaleType="fitXY"
        android:rotation="-2"
        app:layout_constraintTop_toTopOf="@id/card_title"
        app:layout_constraintBottom_toBottomOf="@id/card_title"
        app:layout_constraintStart_toStartOf="@id/card_title"
        app:layout_constraintEnd_toEndOf="@id/card_title"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/CardTitle"
        android:id="@+id/card_title"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/CardContentWrapper"
        android:id="@+id/card_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/fav_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_title"
        app:layout_constraintVertical_bias="0"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_placeholder"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/card_problem"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/card_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="6"
            android:ellipsize="end"/>


    </android.support.constraint.ConstraintLayout>



    <ImageView
        android:id="@+id/fav_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_favorite_white"
        app:layout_constraintEnd_toEndOf="@id/card_title"
        app:layout_constraintTop_toBottomOf="@id/card_content_container"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/default_margin"/>

    <ImageView
        android:id="@+id/notes_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_assignment_white"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/fav_icon"
        app:layout_constraintTop_toTopOf="@id/fav_icon"
        app:layout_constraintBottom_toBottomOf="@id/fav_icon"/>

    <TextView
        android:id="@+id/notes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/notes_icon"
        app:layout_constraintTop_toTopOf="@id/notes_icon"
        app:layout_constraintBottom_toBottomOf="@id/notes_icon"
        android:visibility="gone"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ffffff" />

</android.support.constraint.ConstraintLayout>