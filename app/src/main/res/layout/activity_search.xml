<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:padding="@dimen/default_margin"
    tools:context=".ui.activities.SearchActivity">

    <include layout="@layout/layout_default_app_bar"
        android:id="@+id/default_app_bar"/>
    <LinearLayout
        android:id="@+id/search_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/default_app_bar"
        android:layout_marginTop="5dp">
        <AutoCompleteTextView
            android:id="@+id/search_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAppearance="@style/Base.Widget.AppCompat.SearchView"
            android:maxLines="1"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/add_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/search_keyword"/>
    </LinearLayout>
    <ListView
        android:id="@+id/selected_keywords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/search_line"/>
</android.support.constraint.ConstraintLayout>