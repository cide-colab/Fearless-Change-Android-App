<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_item_foreground"
    android:layout_margin="4dp"
    android:background="@color/note_color"
    android:padding="@dimen/default_padding">

    <ImageView
        android:id="@+id/create_note_dialog_pin_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginBottom="@dimen/default_margin"
        android:src="@drawable/pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete_sweep_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_note_note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/note_font"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_note_dialog_pin_icon" />

    <TextView
        android:id="@+id/create_note_note_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/note_font"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_note_note_title" />

</androidx.constraintlayout.widget.ConstraintLayout>