<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/dashboard_content">


    <de.thkoeln.fherborn.fearlesschange.views.CardViewLarge
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/card_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <include layout="@layout/layout_card_small"
        android:id="@+id/card_small"
        android:layout_width="0dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card_small2"/>

    <include layout="@layout/layout_card_small"
        android:id="@+id/card_small2"
        android:layout_width="0dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_large"
        app:layout_constraintLeft_toRightOf="@id/card_small"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>