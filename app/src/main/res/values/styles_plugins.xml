<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Plugins -->
    <style name="PluginContainer">
        <item name="android:padding">32dp</item>
    </style>

    <style name="PluginIcon">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="PluginHeader">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="PluginPatternContainer">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="PluginLabel">
        <item name="android:layout_width">60dp</item>
    </style>

    <style name="PluginAction">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:tint">@color/secondaryText</item>
    </style>
</resources>