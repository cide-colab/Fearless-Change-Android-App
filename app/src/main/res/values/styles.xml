<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/CardView</item>
        <item name="actionBarStyle">@style/AppToolBar</item>
        <item name="android:dialogTheme">@style/Dialog</item>
    </style>

    <style name="CardTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:rotation">-2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardContentWrapper">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/card_content_bg</item>
    </style>

    <style name="CardButton" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">64dp</item>
    </style>


    <style name="Card" parent="CardView">
        <item name="android:clipChildren">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="layout_constraintDimensionRatio">55:86</item>
    </style>

    <style name="ActivitySection">
        <item name="android:layout_marginTop">@dimen/feature_margin</item>
        <item name="android:layout_marginLeft">@dimen/feature_margin</item>
        <item name="android:layout_marginRight">@dimen/feature_margin</item>
        <item name="android:padding">@dimen/feature_padding</item>
    </style>

    <style name="DashboardFeature" parent="ActivitySection" />

    <style name="ActivityContent">
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="ActivitySection.WithoutContentWrapper">
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:fillViewport">true</item>
    </style>


    <style name="AppActivity">
        <item name="android:background">@drawable/app_bg</item>
    </style>

    <style name="CardWrapper">
        <item name="android:background">@drawable/card_bg</item>
    </style>

