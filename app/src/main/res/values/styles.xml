    <style name="ListItemBigtext">
        <item name="android:textColor">#25467A</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ListItemSubtext">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Chip">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/chip_background</item>
    </style>


    <!-- CLEAN -->

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:dialogTheme">@style/Dialog</item>
    </style>

    <style name="Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:drawable/screen_background_dark_transparent
        </item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Activity">
        <item name="android:background">@drawable/bg_activity</item>
    </style>

    <style name="AppIcon">
        <item name="android:adjustViewBounds">true</item>
    </style>


    <style name="AppTitle">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppToolBar">
        <item name="android:background">#44ffffff</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemBackground">@color/primary</item>
        <item name="itemIconTint">@color/primaryText</item>
        <item name="itemTextColor">@color/primaryText</item>
    </style>

    <style name="PatternCardView">
        <item name="android:clipChildren">true</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="layout_constraintDimensionRatio">55:86</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="PatternCardViewMainWrapper">
        <!--<item name="android:background">@drawable/card_bg</item>-->
    </style>

    <style name="PatternCardViewImage">
        <item name="layout_constraintDimensionRatio">5:3</item>
        <item name="android:paddingTop">@dimen/defaultPadding</item>
        <item name="android:paddingStart">@dimen/defaultPadding</item>
        <item name="android:paddingEnd">@dimen/defaultPadding</item>
    </style>

    <style name="PatternCardViewTitle">
        <item name="android:textSize">@dimen/cardTitleTextSize</item>
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:background">@color/secondary</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:gravity">center</item>
        <item name="android:rotation">-3</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="PatternCardViewTitle.Detail">
        <item name="android:textSize">@dimen/cardDetailTitleTextSize</item>
    </style>

    <style name="PatternCardViewTitle.Detail.Back">
        <item name="android:rotation">3</item>
    </style>

    <style name="PatternCardViewContentWrapper">
        <item name="android:background">@color/secondaryDark</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingLeft">@dimen/defaultPadding</item>
        <item name="android:paddingRight">@dimen/defaultPadding</item>
        <item name="android:paddingBottom">@dimen/defaultPadding</item>
    </style>

    <style name="PatternCardViewText">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="android:maxLines">8</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/cardContentTextSize</item>
    </style>


    <style name="PatternCardViewText.Detail">
        <item name="android:textSize">@dimen/cardDetailContentTextSize</item>
    </style>


    <style name="PatternCardViewText.Detail.Back">
        <item name="android:maxLines">15</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="PatternCardFavoriteIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:rotation">-6</item>
        <item name="android:src">@drawable/ic_favorite_full</item>
    </style>

    <style name="PatternCardNotesIcon">
        <item name="android:elevation">3dp</item>
        <item name="android:rotation">6</item>
        <item name="android:src">@drawable/bg_note_count</item>
    </style>

    <style name="PatternCardNoteCount">
        <item name="android:elevation">4dp</item>
        <item name="android:rotation">6</item>
        <item name="android:fontFamily">@font/note_font</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PatternCardContentIcon">
        <item name="android:tint">@color/secondaryText</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="PatternCardContentIcon.Problem">
        <item name="android:src">@drawable/ic_priority_high_black_24dp</item>
    </style>

    <style name="PatternCardContentIcon.Solution">
        <item name="android:src">@drawable/ic_done_black_24dp</item>
    </style>

    <style name="PatternCardContentSection">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ContentContainer">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

    <style name="SettingsItem">
        <item name="android:padding">@dimen/defaultPadding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#55ffffff</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <style name="SettingsHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:padding">@dimen/defaultPadding</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="SettingsIcon.UserSection">
        <item name="android:background">@drawable/settings_icon_user_bg</item>
    </style>

    <style name="SettingsIcon.SystemSection">
        <item name="android:background">@drawable/settings_icon_system_bg</item>
    </style>

    <style name="SettingsItemLabel">
        <item name="android:layout_marginStart">32dp</item>
    </style>
</resources>
