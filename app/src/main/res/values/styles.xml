<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:dialogTheme">@style/AppDialog</item>
    </style>

    <style name="ActionBar">
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="popupTheme">@style/Theme.Design.NoActionBar</item>
    </style>

    <style name="CardTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:rotation">-2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CardContentWrapper">
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="CardButton" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">64dp</item>
    </style>


    <style name="Card" parent="CardView">
        <item name="android:clipChildren">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="layout_constraintDimensionRatio">55:86</item>
    </style>

    <style name="AppDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:drawable/screen_background_dark_transparent
        </item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActivitySection">
        <item name="android:background">@color/feature_background</item>
        <item name="android:layout_marginTop">@dimen/feature_margin</item>
        <item name="android:layout_marginLeft">@dimen/feature_margin</item>
        <item name="android:layout_marginRight">@dimen/feature_margin</item>
        <item name="android:padding">@dimen/feature_padding</item>
    </style>

    <style name="DashboardFeature" parent="ActivitySection" />

    <style name="ActivityContent">
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="SettingsHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="SettingsItem">
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="SettingsItemIcon">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SettingsItemIcon.UserSection">
        <item name="android:background">@drawable/settings_icon_user_bg</item>
    </style>

    <style name="SettingsItemIcon.SystemSection">
        <item name="android:background">@drawable/settings_icon_system_bg</item>
    </style>

    <style name="SettingsItemLabel">
        <item name="android:layout_marginStart">32dp</item>
    </style>

</resources>
