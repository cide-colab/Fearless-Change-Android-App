<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="CardTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:rotation">-2</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Card" parent="CardView">
        <item name="android:clipChildren">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="layout_constraintDimensionRatio">55:86</item>
    </style>

    <style name="CardContentWrapper">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/card_content_bg</item>
    </style>

    <style name="CardButton" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="fabCustomSize">64dp</item>
    </style>

</resources>
