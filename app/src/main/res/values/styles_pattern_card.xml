<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PatternCard" parent="AppTheme">

    </style>

    <style name="PatternCard.Wrapper">

    </style>

    <style name="PatternCard.CardView">
        <item name="layout_constraintDimensionRatio">55:86</item>
        <item name="android:clipChildren">true</item>
        <item name="cardCornerRadius">@dimen/patternCardCornerRadius</item>
        <item name="cardElevation">@dimen/patternCardElevation</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_margin">@dimen/patternCardMargin</item>
    </style>

    <style name="PatternCard.Container"></style>

    <style name="PatternCard.Image">
        <item name="layout_constraintDimensionRatio">5:3</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="PatternCard.Title">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:padding">@dimen/patternCardTitlePadding</item>
        <item name="charactersPerRow">40</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/patternCardTitleElevation</item>
    </style>

    <style name="PatternCard.Content">
        <item name="android:padding">@dimen/patternCardContentPadding</item>
        <item name="android:background">?android:colorPrimaryDark</item>
    </style>

    <style name="PatternCard.Text">
        <item name="android:gravity">center</item>
        <item name="charactersPerRow">50</item>
    </style>

</resources>