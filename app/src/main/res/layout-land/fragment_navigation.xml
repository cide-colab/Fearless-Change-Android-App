<android.support.constraint.ConstraintLayout
    android:id="@+id/main_nav_bar"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    android:background="@color/component_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/dashboard_nav_overview_bg"
        android:src="@drawable/ic_apps_white"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="normal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fab_overview"
        app:layout_constraintEnd_toEndOf="@id/fab_overview"
        app:layout_constraintTop_toBottomOf="@id/fab_overview"
        android:text="@string/label_nav_overview"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fab_overview"
        app:layout_constraintBottom_toTopOf="@id/fab_more"
        app:fabSize="normal"
        android:backgroundTint="@color/dashboard_nav_favorites_bg"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:src="@drawable/ic_favorite_white"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fab_favorites"
        app:layout_constraintEnd_toEndOf="@id/fab_favorites"
        app:layout_constraintTop_toBottomOf="@id/fab_favorites"
        android:text="@string/label_nav_favorites"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:fabSize="normal"
        android:backgroundTint="@color/dashboard_nav_more_bg"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:src="@drawable/ic_menu_white"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/label_fab_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/fab_more"
        app:layout_constraintEnd_toEndOf="@id/fab_more"
        app:layout_constraintTop_toBottomOf="@id/fab_more"
        android:text="@string/label_nav_more"/>

</android.support.constraint.ConstraintLayout>