        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.thkoeln.fherborn.fearlesschange.ui.activities.CardDetailActivity"
            android:parentActivityName="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity" />
        </activity>
        <activity android:name="de.thkoeln.fherborn.fearlesschange.ui.activities.OverviewActivity"
            android:parentActivityName="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity" />
        </activity>
        <activity android:name="de.thkoeln.fherborn.fearlesschange.ui.activities.FavoritesActivity"
            android:parentActivityName="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity" />
        </activity>
        <activity android:name="de.thkoeln.fherborn.fearlesschange.ui.activities.MoreActivity"
            android:parentActivityName="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.ui.activities.DashboardActivity" />
        </activity>
    </application>

</manifest>