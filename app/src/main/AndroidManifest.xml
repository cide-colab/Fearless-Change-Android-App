<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thkoeln.fherborn.fearlesschange">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.thkoeln.fherborn.fearlesschange.v2.ui.dashbaord.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.OverviewActivity"
            android:label="@string/title_activity_overview"
            android:parentActivityName=".ui.activities.DashboardActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.v2.ui.dashbaord.DashboardActivity" />
        </activity>
        <activity
            android:name=".v2.ui.favorites.FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:parentActivityName=".ui.activities.DashboardActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.v2.ui.dashbaord.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.activities.MoreActivity"
            android:label="@string/title_activity_more"
            android:parentActivityName=".ui.activities.DashboardActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.v2.ui.dashbaord.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.activities.SearchActivity"
            android:label="@string/title_activity_search"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.v2.ui.dashbaord.DashboardActivity" />
        </activity>
        <activity
            android:name=".v2.ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.thkoeln.fherborn.fearlesschange.v2.ui.dashbaord.DashboardActivity" />
        </activity>

    </application>

</manifest>